# --- Build stage ---
FROM node:22-alpine AS build

WORKDIR /app

# Install pnpm globally
RUN npm i -g pnpm

# Copie package.json et lockfile d'abord pour le cache
COPY package*.json ./
COPY pnpm-lock.yaml* ./

# Install deps (dev inclus pour build)
RUN pnpm install --frozen-lockfile

# Copie tout le code
COPY . .

# Build Next.js
RUN pnpm build

# --- Production stage ---
FROM node:22-alpine AS prod

WORKDIR /app

# Copie seulement le build et les deps prod
COPY --from=build /app/.next ./.next
COPY --from=build /app/public ./public
COPY --from=build /app/node_modules ./node_modules
COPY --from=build /app/package*.json ./
COPY --from=build /app/next.config.mjs ./next.config.mjs

# Expose le port
EXPOSE 3000
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# User non-root (optionnel, mais conseillé)
USER node

CMD ["npù   ", "node_modules/.bin/next", "start"]
